{
    "name": "mitigoa/kra-php-sdk",
    "description": "KRA GavaConnect PHP SDK - Unofficial PHP client for Kenya Revenue Authority GavaConnect APIs",
    "type": "library",
    "license": "MIT",
    "version": "1.0.0",
    "keywords": [
        "kra",
        "gavaconnect",
        "kenya",
        "tax",
        "etims",
        "oauth2",
        "pin",
        "tcc"
    ],
    "homepage": "https://github.com/Mitigoa/kra-php-sdk",
    "readme": "README.md",
    "authors": [
        {
            "name": "Benson Mitigoa",
            "email": "okonyobenson@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/Mitigoa/kra-php-sdk/issues",
        "source": "https://github.com/Mitigoa/kra-php-sdk"
    },
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/cache": "^3.0",
        "psr/log": "^1.0 || ^2.0 || ^3.0",
        "guzzlehttp/guzzle": "^7.0",
        "guzzlehttp/psr7": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10",
        "php-cs-fixer/php-cs-fixer": "^3.50",
        "infection/infection": "^0.27",
        "rector/rector": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "KraPHP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KraPHP\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite unit",
        "test:integration": "phpunit --testsuite integration",
        "test:coverage": "phpunit --coverage-html coverage/",
        "analyze": "phpstan analyse",
        "analyze:strict": "phpstan analyse -c phpstan.neon --level=8",
        "fix": "php-cs-fixer fix --config=.php-cs-fixer.php",
        "fix:dry": "php-cs-fixer fix --config=.php-cs-fixer.php --dry-run --diff",
        "mutate": "infection --min-msi=80 --min-covered-msi=85"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
